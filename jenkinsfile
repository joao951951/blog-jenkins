pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                sh 'git pull'
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('Notification') {
            steps {
                emailext body: 'A pipeline do blog foi concluída com sucesso!',
                    subject: 'Notificação de Pipeline - Blog',
                    to: 'joao159@edu.unifil.br'
            }
        }
    }
}